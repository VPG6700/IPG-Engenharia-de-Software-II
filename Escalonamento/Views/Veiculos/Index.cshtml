@model IEnumerable<Escalonamento.Models.Veiculos>

@{
    ViewData["Title"] = "Lista de Veiculos";
}

<h2>Lista de Veiculos</h2>

<p>
    <a asp-action="Create"class="btn btn-success">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumMatricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumMatricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidade)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.VeiculosId">Editar</a> |
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.VeiculosId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.VeiculosId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
