@model Escalonamento.Models.Veiculos

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar Veiculo</h2>
<div class="alert alert-danger" role="alert">
    <h3>Tens a certeza que queres eliminar isso?</h3>
    </div>
        <div>
            <h4>Veiculos</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Marca)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Marca.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NumMatricula)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumMatricula)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Disponibilidade)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Disponibilidade)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="VeiculosId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-primary">Voltar a Lista</a>
            </form>
        </div>
