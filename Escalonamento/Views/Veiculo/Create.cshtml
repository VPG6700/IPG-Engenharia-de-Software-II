@model Escalonamento.Models.Veiculos

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Veiculos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label">MARCA</label>
                <select asp-for="Marca" class="form-control" asp-items="ViewBag.Marca"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumMatricula" class="control-label"></label>
                <input asp-for="NumMatricula" class="form-control" />
                <span asp-validation-for="NumMatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Disponibilidade" /> @Html.DisplayNameFor(model => model.Disponibilidade)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

